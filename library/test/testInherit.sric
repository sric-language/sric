
import sric::*;

struct C : B, I {
  var c: Int;
  override fun foo() {
    printf("C::foo\n");
  }
}

trait I {
  abstract fun foo();
}

virtual struct B {
  var a: Int;
  virtual fun foo() { printf("B::foo\n"); }
}

virtual struct C1 {
  private var a: Int = 1;
  private fun foo() { printf("%d\n", a); }
  fun foo2() { foo(); }
}

struct C2 : C1 {
  private var a: Int = 2;
  private fun foo() { printf("%d\n", a); }
}

fun testInherit() {
    var x = new C { .a = 1; };
    x.foo();

    var p1: * B = x;
    var p3: * I = p1 as * I;
    p3.foo();
    var p4: * I = x as * I;
    
    p4.foo();

    var b1 = p1 is * I;

    printf("x is I: %d\n", b1);

    verify(b1);
    verify(p1.a == 1);
}

fun testDector() {
    var x : own* I = new C;
    //var x : own* I = move a;
    x.foo();
}

fun testDynamicCast() {
    var p : own*? B = new C;
    var i = p as * C;
    i.foo();
}

fun testCast() : own* I {
  var x: own*? C;
  //var a: own* C = move x;
  return x;
}

fun testPrivate() {
  var c = new C2;
  c.foo2();
}